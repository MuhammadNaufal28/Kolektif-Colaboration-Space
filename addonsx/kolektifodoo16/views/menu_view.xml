<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- kolektif.menu tree view -->
    <record id="kolektif_menu_view_tree" model="ir.ui.view">
        <field name="name">kolektif.menu.view.tree</field>
        <field name="model">kolektif.menu</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="kode"/>
                <field name="nama_menu"/>
                <field name="deskripsi"/>
                <field name="jenis"/>
                <field name="stock"/>
                <field name="harga"/>
                <field name="harga_modal"/>
                <field name="bahanbaku_ids"/>
            </tree>
        </field>
    </record>
    <!-- kolektif.menu form view -->
    <record id="kolektif_menu_view_form" model="ir.ui.view">
        <field name="name">kolektif.menu.view.form</field>
        <field name="model">kolektif.menu</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="kode"/>
                        <field name="nama_menu"/>
                        <field name="deskripsi"/>
                        <field name="jenis"/>
                        <field name="stock"/>
                        <field name="harga"/>
                        <field name="harga_modal"/>
                    </group>
                    <group>
                        <!-- Add your fields here -->
                        <field name="bahanbaku_ids">
                            <tree editable='bottom'>
                                    <field name="kode"/>
                                    <field name="name"/>
                                    <field name="komposisi"/>
                                    <field name="stock"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- kolektif.menu action window -->
    <record id="kolektif_menu_action" model="ir.actions.act_window">
        <field name="name">Daftar Menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kolektif.menu</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="kolektif_menu_menu_act" 
            name="Kolektif Menu" 
            parent="kolektif_menu_menu_categ" 
            action="kolektif_menu_action" 
            sequence="5"/>
</odoo>